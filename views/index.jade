extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Auto Rifa

        form(method='POST' action='/criar')
          div.form-group
            label(for='desc') Descrição:
            textarea#desc.form-control(class='span6' rows='6' type='text' placeholder='Escreva aqui a descrição da rifa' name='desc')
          div.form-group
            label(for='preco') Preço:
            input#preco.form-control(type='number' step='0.25' min='0' placeholder='R$ 5,00' name='preco')
          div.form-group
            label(for='dataSorteio') Data do Sorteio:
            input#dataSorteio.form-control(type='date', placeholder='DD/MM/YYYY' name='dataSorteio')
          div.form-group
            label(for='img') Imagem do Prêmio:
            input#img.form-control(type='file' name='img' accept='image/*')
          div.form-group
            label(for='quant') Numeração dos canhotos:
            div.form-group(class='form-inline')
                input#primeiro.form-control(type='number' step='1' min='1' name='primeiro' placeholder='Primeiro')
                input#ultimo.form-control(type='number' step='1' min='1' name='ultimo' placeholder='Último')
          button.btn.btn-primary(type='submit') Gerar Rifas
